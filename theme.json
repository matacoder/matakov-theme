{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0366d6",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#024ea4",
                    "name": "Secondary"
                },
                {
                    "slug": "background",
                    "color": "#f8f9fa",
                    "name": "Background"
                },
                {
                    "slug": "foreground",
                    "color": "#333333",
                    "name": "Foreground"
                },
                {
                    "slug": "tertiary",
                    "color": "#e9ecef",
                    "name": "Border Color"
                }
            ],
            "gradients": [],
            "link": true,
            "custom": true,
            "customGradient": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
                    "slug": "inter",
                    "name": "Inter"
                },
                {
                    "fontFamily": "monospace",
                    "slug": "monospace",
                    "name": "Monospace"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.9rem",
                    "name": "Small"
                },
                {
                    "slug": "regular",
                    "size": "1rem",
                    "name": "Regular"
                },
                {
                    "slug": "medium",
                    "size": "1.2rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "extra-large",
                    "size": "1.8rem",
                    "name": "Extra Large"
                }
            ],
            "customFontSize": true,
            "lineHeight": true
        },
        "spacing": {
            "units": [
                "%",
                "px",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1140px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--foreground)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--regular)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--extra-large)",
                    "fontWeight": "normal"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "normal"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "normal"
                }
            }
        }
    }
}
